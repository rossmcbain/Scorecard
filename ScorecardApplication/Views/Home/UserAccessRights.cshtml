@{
    ViewBag.Title = "User Access Rights";
}
@model ScorecardApplication.Models.UserAccessRights

@using (Html.BeginForm())
{
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>
                Username
            </td>
            <td>
                Firstname
            </td>
            <td>
                Surname
            </td>
            <td>
                User Level
            </td>
            <td>
                Email Address
            </td>
            <td>

            </td>
        </tr>
    </thead>

    @foreach (ScorecardApplication.Models.User User in Model.UserList)
    {
        <tr>
            <td>@User.username</td>
            <td>@User.firstname</td>
            <td>@User.surname</td>
            <td>@User.userlevel.decription</td>
            <td>@User.emailaddress</td>
            <td><a href="/home/EditUser?UserID=@User.userid">Edit</a></td>
            
        </tr>
    }

</table>
<br/>
<input type="hidden" value=""/>
<input type="submit" name="submit" class="btn" value="New User" />

}